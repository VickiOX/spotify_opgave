---
const {title, img, NewLabel, color} = Astro.props


---
<div class="Kategori_Card_Wrapper"> 
   
<div class="Kategori_Card" > 
    <h3>{title}</h3>
    <div class="img_Box"><img src={img}> </div>
  
</div>
<div class="Label_Box"> {NewLabel && <p class="label">NEW</p>}</div>
</div>

<style define:vars={{color}}>
    :root{

    }
.label, h3 {
        color:#F0F0F0
    }
.Kategori_Card{
    width: 180px;
    background-color: var(--color);
    border-radius: 10px;
    height: 180px;
    position: relative;
    overflow: hidden;
    margin:6px;
}

.Kategori_Card img{
    width: 90px;
    position: relative;
   
    rotate: 20deg;
}
.img_Box{
    position: absolute;
    width: 100%;
    height: 100%;
    bottom: -95px;
    right: -105px;
}
.label{
    padding:6px 8px;
    background-color:var(--color);
    width:50px;
    border-radius: 20px;
    font-size: 12px;
    text-align: center;
    position: absolute;
    top:-20px;
    right:-12px;
    border:2px black solid;
}

h3{
    padding-left: 10px;
    margin-top:10px;
}
.Kategori_Card_Wrapper{
    position: relative;
}
</style>